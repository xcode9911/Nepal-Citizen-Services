{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    
    // Add these lines to specify output directory
    "outDir": "./dist",  // Specify where compiled files should go
    "rootDir": "./src",  // Specify the root directory of your source files
    "sourceMap": true    // Optional: generate source map files
  },
  "include": ["src/**/*"],  // Include all files in src directory
  "exclude": ["node_modules", "**/*.spec.ts"]  // Exclude node_modules and test files
}