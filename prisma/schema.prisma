generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  address        String
  fatherName     String
  motherName     String
  citizenshipNo  String   @unique
  issueDate      DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relation
  otps           OTP[]

  @@map("users")
}

model OTP {
  id         String   @id @default(uuid())
  code       String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     String

  @@index([userId])
  @@map("otps")
}
